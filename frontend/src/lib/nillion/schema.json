{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bounty Collection",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "bounties": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "owner": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "requiredSkills": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "datePosted": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "dueDate": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "state": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "estimatedTime": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "description": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "longDescription": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "bountyId": {
                            "type": "object",
                            "properties": {
                                "$allot": {
                                    "type": "string"
                                }
                            },
                            "required": ["$allot"]
                        },
                        "reward": {
                            "type": "object",
                            "properties": {
                                "amount": {
                                    "type": "object",
                                    "properties": {
                                        "$allot": {
                                            "type": "string"
                                        }
                                    },
                                    "required": ["$allot"]
                                },
                                "token": {
                                    "type": "object",
                                    "properties": {
                                        "$allot": {
                                            "type": "string"
                                        }
                                    },
                                    "required": ["$allot"]
                                },
                                "chainId": {
                                    "type": "object",
                                    "properties": {
                                        "$allot": {
                                            "type": "string"
                                        }
                                    },
                                    "required": ["$allot"]
                                }
                            },
                            "required": ["amount", "token", "chainId"]
                        }
                    },
                    "required": ["title", "owner", "requiredSkills", "datePosted", "dueDate", "state", "estimatedTime", "description", "longDescription", "bountyId", "reward"]
                }
            }
        },
        "required": ["_id", "bounties"]
    }
}
